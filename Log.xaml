<Window x:Class="Shell_City_Mod_Loader.Log"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shell_City_Mod_Loader"
        mc:Ignorable="d"
        Title="Installation Log" Width="600" MaxHeight="450" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="Height">
    <Window.Background>
        <SolidColorBrush Opacity="1" Color="{StaticResource BackgroundMain}"/>
    </Window.Background>

    <StackPanel>
        <ScrollViewer x:Name="logScroll" Margin="20,20,20,0" MinHeight="300" MaxHeight="300" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="LogBox" FontSize="14" Foreground="{StaticResource ForegroundWhiteImportantBrush}" Background="{StaticResource BackgroundLightBrush}" FontFamily="Consolas"/>
        </ScrollViewer>
        <Button x:Name="Finish" Foreground="{StaticResource ForegroundWhiteImportantBrush}" Background="{StaticResource BackgroundLightBrush}" FontFamily="./Fonts/#Poppins" Content="FINISH" VerticalAlignment="Center" HorizontalAlignment="Center" Width="120" Height="40" FontSize="18" Click="Finish_Click" Margin="12" BorderThickness="0" Cursor="Hand" IsEnabled="False" IsDefault="True"/>
    </StackPanel>
</Window>
